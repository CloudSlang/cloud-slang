<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

    <id>bin</id>
    <baseDirectory>slang</baseDirectory>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>zip</format>
        <format>tar.gz</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>target/slang</directory>
            <outputDirectory>slang</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target/slang/bin</directory>
            <includes>
                <include>slang.sh</include>
            </includes>
            <outputDirectory>slang/bin</outputDirectory>
            <fileMode>0755</fileMode>
            <lineEnding>unix</lineEnding>
        </fileSet>
        <fileSet>
            <directory>target/slang/bin</directory>
            <includes>
                <include>slang.bat</include>
            </includes>
            <outputDirectory>slang/bin</outputDirectory>
            <fileMode>0755</fileMode>
            <lineEnding>dos</lineEnding>
        </fileSet>
    </fileSets>
</assembly>